{
  "meta": {
    "options": {
      "linkedFile": "/views/restaurants.ejs",
      "linkedForm": "scformDelRest"
    },
    "$_POST": [
      {
        "type": "number",
        "fieldName": "rest_id",
        "name": "rest_id"
      },
      {
        "type": "text",
        "fieldName": "delete",
        "name": "delete"
      }
    ]
  },
  "exec": {
    "steps": [
      {
        "name": "",
        "module": "auth",
        "action": "restrict",
        "options": {
          "provider": "security",
          "permissions": [
            "write"
          ],
          "loginUrl": "/login",
          "forbiddenUrl": "/403-forbidden"
        }
      },
      {
        "name": "",
        "module": "core",
        "action": "condition",
        "options": {
          "if": "{{($_POST.delete=='Yes')}}",
          "then": {
            "steps": [
              {
                "name": "upRest",
                "module": "dbupdater",
                "action": "update",
                "options": {
                  "connection": "FoodApp",
                  "sql": {
                    "type": "update",
                    "values": [
                      {
                        "table": "m_restaurant",
                        "column": "deleted_on",
                        "type": "datetime",
                        "value": "{{NOW}}"
                      }
                    ],
                    "table": "m_restaurant",
                    "wheres": {
                      "condition": "AND",
                      "rules": [
                        {
                          "id": "id",
                          "field": "id",
                          "type": "double",
                          "operator": "equal",
                          "value": "{{$_POST.rest_id}}",
                          "data": {
                            "column": "id"
                          },
                          "operation": "="
                        }
                      ],
                      "conditional": null,
                      "valid": true
                    },
                    "returning": "id",
                    "query": "UPDATE m_restaurant\nSET deleted_on = :P1 /* {{NOW}} */\nWHERE id = :P2 /* {{$_POST.rest_id}} */",
                    "params": [
                      {
                        "name": ":P1",
                        "type": "expression",
                        "value": "{{NOW}}"
                      },
                      {
                        "operator": "equal",
                        "type": "expression",
                        "name": ":P2",
                        "value": "{{$_POST.rest_id}}"
                      }
                    ]
                  }
                },
